<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @cocktail.name %></h1>
      <p><%= @cocktail.description %></p>
      <ul>
      <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %>
      <%= dose.description %></li>
      <% end %>
    </li>
      </ul>
    </div>
  </div>
</div>

<%= link_to "See all cocktails", cocktails_path %>
<%= link_to "Edit Cocktail", edit_cocktail_path(@cocktail)  %>
<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>

